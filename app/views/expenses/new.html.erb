<div class="container">
<div class="row">

<%= form_with scope: :expense, url:expenses_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class:"form-control" %>
  </div>
 
 <div class="form-group">
    <%= form.label :montant %> (â‚¬)<br>
    <%= form.text_field :amount, class:"form-control" %>
 </div>


<div class="form-group">
    <%= form.label :payeur %><br>
   <%= form.select :user_id, @users.collect {|c| [c.nom, c.id]}%>
 </div>

<div class="form-group">
    <%= form.label :beneficiary_ids %><br>
    <%= form.select_tag :beneficiary_ids, options_from_collection_for_select(@users, 'id', 'nom'), {:multiple => true} %>    
 </div> 
 
  <p>
   <!-- <%= form.submit%>-->
   <%= button_tag(type:'submit', class:"btn") do %>
   <i class="icon-ok icon-white"></i> Save
    <% end %>
  </p>
<% end %>

</div>
</div>